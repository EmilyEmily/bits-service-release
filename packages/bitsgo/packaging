set -ex

export GOROOT=$(readlink -nf /var/vcap/packages/golang1.10)
export PATH=${GOROOT}/bin:${PATH}
export GOPATH=$PWD
export PATH=$GOPATH/bin:$PATH

mkdir src
mkdir bin
cp -a github.com src
cd src/github.com/cloudfoundry-incubator/bits-service/cmd/bitsgo
go install
cp $GOPATH/bin/bitsgo ${BOSH_INSTALL_TARGET}
