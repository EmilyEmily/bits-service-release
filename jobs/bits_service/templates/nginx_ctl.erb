#!/bin/bash

set -e -x

RUN_DIR=/var/vcap/sys/run/nginx_bits
LOG_DIR=/var/vcap/sys/log/nginx_bits
PIDFILE=$RUN_DIR/nginx.pid
JOB_DIR=/var/vcap/jobs/bits_service

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "Nginx"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/nginx/sbin/nginx \
         -c $JOB_DIR/config/nginx.conf
    ;;

  stop)
    #force kill immediately; drain script should have already run
    kill_and_wait $PIDFILE 0 1

    ;;

  *)
    echo "Usage: nginx_ctl {start|stop}"

    ;;

esac
