check process bits_service
  with pidfile /var/vcap/sys/run/bits_service/bits_service.pid
  start program "/var/vcap/jobs/bits_service/bin/bits_service_ctl start"
  stop program "/var/vcap/jobs/bits_service/bin/bits_service_ctl stop"
  group vcap

check process nginx_bits
  with pidfile /var/vcap/sys/run/nginx_bits/nginx.pid
  start program "/var/vcap/jobs/bits_service/bin/nginx_ctl start"
  stop program "/var/vcap/jobs/bits_service/bin/nginx_ctl stop"
  group vcap
