#!/bin/bash

export LANG=en_US.UTF-8

export NAME=bits-service

export JOB_DIR=/var/vcap/jobs/${NAME}
export PATH=/var/vcap/packages/ruby-2.3/bin:$PATH

PACKAGE_DIR=/var/vcap/packages/${NAME}

RUN_DIR=/var/vcap/sys/run/${NAME}
LOG_DIR=/var/vcap/sys/log/${NAME}
PIDFILE=${RUN_DIR}/${NAME}.pid
STORE_DIR=/var/vcap/store/bits-service

export BUNDLE_GEMFILE=$PACKAGE_DIR/${NAME}/Gemfile
export HOME=/home/vcap # rake needs it to be set to run tasks
export TMPDIR=/var/vcap/data/${NAME}/tmp
export BITS_CONFIG_FILE=$JOB_DIR/config/bits_config.yml

source ${JOB_DIR}/bin/syslog_utils.sh
mkdir -p $LOG_DIR
tee_output_to_sys_log_and_file "${LOG_DIR}" "$(basename "$0")"

source /var/vcap/packages/bits-common/pid_utils.sh
source ${JOB_DIR}/bin/blobstore_waiter.sh
mkdir -p $RUN_DIR
mkdir -p $TMPDIR
mkdir -p $STORE_DIR

case $1 in

  start)

    chown vcap:vcap $RUN_DIR
    chown vcap:vcap $LOG_DIR
    chown vcap:vcap $TMPDIR

    pid_guard $PIDFILE "Bits Service"

    wait_for_blobstore

    cd $PACKAGE_DIR/${NAME}

    bundle exec puma -d --pidfile $PIDFILE \
      -e production \
      -b unix:/var/vcap/sys/run/bits-service/bits-service.sock \
      --redirect-stdout $LOG_DIR/bits-service.stdout.log \
      --redirect-stderr $LOG_DIR/bits-service.stderr.log \
      --redirect-append

    ;;
  stop)
      kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: bits-service_ctl {start|stop}"
    ;;

esac
