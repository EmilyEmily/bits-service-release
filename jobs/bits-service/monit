check process bits-service
  with pidfile /var/vcap/sys/run/bits-service/bits-service.pid
  start program "/var/vcap/jobs/bits-service/bin/bits-service_ctl start"
  stop program "/var/vcap/jobs/bits-service/bin/bits-service_ctl stop"
  group vcap

check process nginx_bits
  with pidfile /var/vcap/sys/run/nginx_bits/nginx.pid
  start program "/var/vcap/jobs/bits-service/bin/nginx_ctl start"
  stop program "/var/vcap/jobs/bits-service/bin/nginx_ctl stop"
  group vcap

check process statsd_pipe
  with pidfile /var/vcap/sys/run/nginx_bits/statsd_pipe.pid
  start program "/var/vcap/jobs/bits-service/bin/statsd_pipe_ctl start"
  stop program "/var/vcap/jobs/bits-service/bin/statsd_pipe_ctl stop"
  group vcap
